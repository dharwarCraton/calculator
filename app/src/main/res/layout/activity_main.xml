<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalcActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sum_layout">

        <TableRow
            android:id="@+id/row_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_7"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_10"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_8"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_11"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_9"
                android:textColor="#000000"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/button_divide2"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:contentDescription="@string/cd_divide"
                android:src="@drawable/divide" />
        </TableRow>

        <TableRow
            android:id="@+id/row_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_12"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_4"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_13"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_5"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_14"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_6"
                android:textColor="#000000"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/button_add2"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:contentDescription="@string/cd_add"
                android:src="@drawable/add" />
        </TableRow>

        <TableRow
            android:id="@+id/row_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_15"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_1"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_16"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_2"
                android:textColor="#000000"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_17"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_3"
                android:textColor="#000000"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/button_multiply2"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:contentDescription="@string/cd_multiply"
                android:src="@drawable/multiply" />
        </TableRow>

        <TableRow
            android:id="@+id/row_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_clear2"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="2"
                android:background="#A027C2"
                android:text="@string/button_clear"
                android:textAlignment="center"
                android:textColor="#FFE7CBF0"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_18"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_0"
                android:textColor="#000000"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/button_subtract2"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:contentDescription="@string/cd_subtract"
                android:src="@drawable/subtract" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/sum_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/sumLayoutHeight"
        android:background="#AD3CCC"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/sum_textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="45676869707978"
            android:textAlignment="textEnd"
            android:textColor="#E7CBF0"
            android:textSize="36sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="@id/sum_layout"
        app:layout_constraintStart_toStartOf="@id/sum_layout"
        app:layout_constraintTop_toTopOf="@id/sum_layout">

        <ImageView
            android:id="@+id/button_equalTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/cd_equalTo"
            android:src="@drawable/equal" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>