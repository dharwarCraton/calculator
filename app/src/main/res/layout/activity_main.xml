<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalcActivity">

    <LinearLayout
        android:id="@+id/buttonPadBackground_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/buttonPadBackground"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sum_layout"></LinearLayout>

    <TableLayout
        android:id="@+id/buttonPad_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:weightSum="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/sum_layout"
        app:layout_constraintStart_toStartOf="@id/sum_layout"
        app:layout_constraintTop_toBottomOf="@id/equalTo_layout">

        <TableRow
            android:id="@+id/buttonRow_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/rowBackground"
            android:gravity="center"
            android:weightSum="4">

            <Button
                android:id="@+id/button_7"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_7"
                android:textColor="@color/buttonText"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_8"
                android:textColor="@color/buttonText"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_9"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_9"
                android:textColor="@color/buttonText"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/button_divide"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:contentDescription="@string/cd_divide"
                android:src="@drawable/divide"
                android:tint="@color/operatorColours"/>
        </TableRow>

        <TableRow
            android:id="@+id/buttonRow_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/rowBackground"
            android:gravity="center"
            android:weightSum="4">

            <Button
                android:id="@+id/button_4"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_4"
                android:textColor="@color/buttonText"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_5"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_5"
                android:textColor="@color/buttonText"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_6"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_6"
                android:textColor="@color/buttonText"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/button_add"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:contentDescription="@string/cd_add"
                android:src="@drawable/add"
                android:tint="@color/operatorColours"/>
        </TableRow>

        <TableRow
            android:id="@+id/buttonRow_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/rowBackground"
            android:gravity="center"
            android:weightSum="4">

            <Button
                android:id="@+id/button_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_1"
                android:textColor="@color/buttonText"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_2"
                android:textColor="@color/buttonText"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_3"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:text="@string/button_3"
                android:textColor="@color/buttonText"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/button_multiply"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:contentDescription="@string/cd_multiply"
                android:src="@drawable/multiply"
                android:tint="@color/operatorColours"/>
        </TableRow>

        <TableRow
            android:id="@+id/buttonRow_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/rowBackground"
            android:gravity="center"
            android:weightSum="4">

            <Button
                android:id="@+id/button_clear"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="2"
                android:background="@color/clearButton"
                android:text="@string/button_clear"
                android:textAlignment="center"
                android:textColor="#E7CBF0"
                android:textSize="30sp" />

            <Button
                android:id="@+id/button_0"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:gravity="center"
                android:text="@string/button_0"
                android:textColor="@color/buttonText"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/button_subtract"
                android:layout_width="0dp"
                android:layout_height="@dimen/buttonHeight"
                android:layout_weight="1"
                android:background="@color/buttonBackground"
                android:contentDescription="@string/cd_subtract"
                android:src="@drawable/subtract"
                android:tint="@color/operatorColours"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/sum_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/sumLayoutHeight"
        android:background="@color/sumLayout"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/results_textView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:text="45676869707978"
            android:textAlignment="textEnd"
            android:textColor="#E7CBF0"
            android:textSize="36sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/equalTo_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="@id/sum_layout"
        app:layout_constraintStart_toStartOf="@id/sum_layout"
        app:layout_constraintTop_toTopOf="@id/sum_layout">

        <ImageButton
            android:id="@+id/button_equalTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="#00FFFFFF"
            android:contentDescription="@string/cd_equalTo"
            android:src="@drawable/equal" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>